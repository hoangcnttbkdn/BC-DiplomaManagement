{
  "openapi": "3.0.3",
  "info": {
    "title": "Diploma management API",
    "termsOfService": "http://jthanh8144.tk",
    "contact": {
      "email": "thanhvo618@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "admins",
      "description": "API for admins"
    },
    {
      "name": "diplomas",
      "description": "CRUD diploma"
    },
    {
      "name": "upload",
      "description": "API for upload image"
    }
  ],
  "paths": {
    "/admins/login": {
      "post": {
        "tags": [
          "admins"
        ],
        "summary": "Login admin",
        "description": "Login admin with username and password",
        "operationId": "loginAdmin",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginAdmin"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginAdminSuccess"
                }
              }
            }
          },
          "401": {
            "description": "Username or password is incorrect"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/admins/register": {
      "post": {
        "tags": [
          "admins"
        ],
        "summary": "Login admin",
        "description": "Login admin with username and password",
        "operationId": "registerAdmin",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterAdmin"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "400": {
            "description": "Username is exist"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/admins": {
      "get": {
        "tags": [
          "admins"
        ],
        "summary": "Get all admins",
        "description": "Get all admins",
        "operationId": "admins",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayAdmins"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/admins/{id}": {
      "get": {
        "tags": [
          "admins"
        ],
        "summary": "Get admin by id",
        "description": "Get admin by id",
        "operationId": "admin",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Code of diploma",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProfileAdmin"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "tags": [
          "admins"
        ],
        "summary": "Update admin by id",
        "description": "Superadmin admin permission",
        "operationId": "updateAdmin",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of admin",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Create diploma",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAdmin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Permission denied"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "delete": {
        "tags": [
          "admins"
        ],
        "summary": "Delete admin by id",
        "description": "Superadmin admin permission",
        "operationId": "deleteAdmin",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of admin",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Permission denied"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/admins/profile": {
      "get": {
        "tags": [
          "admins"
        ],
        "summary": "Profile admin",
        "description": "Profile admin",
        "operationId": "profileAdmin",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProfileAdmin"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/diplomas": {
      "get": {
        "description": "No limit permission",
        "tags": [
          "diplomas"
        ],
        "summary": "Get all or search diplomas",
        "operationId": "getAllDiplomas",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Full name you want to search",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "code",
            "in": "query",
            "description": "Code of you want to search",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayDiploma"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "post": {
        "tags": [
          "diplomas"
        ],
        "summary": "Create diploma",
        "description": "Admin permission",
        "operationId": "createDiploma",
        "requestBody": {
          "description": "Create diploma",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Diploma"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/diplomas/{code}": {
      "get": {
        "description": "No limit permission",
        "tags": [
          "diplomas"
        ],
        "summary": "Get diploma by code",
        "operationId": "getDiplomaByCode",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "description": "Code of diploma",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Diploma"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "tags": [
          "diplomas"
        ],
        "summary": "Update diploma by code",
        "description": "Admin permission",
        "operationId": "updateDiploma",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Update an existent user in the store",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateDiploma"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "delete": {
        "tags": [
          "diplomas"
        ],
        "summary": "Delete diploma by code",
        "description": "Super admin permission only",
        "operationId": "deleteDiploma",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Permission denied"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/diplomas/sync": {
      "get": {
        "description": "Super admin permission only",
        "tags": [
          "diplomas"
        ],
        "summary": "Sync diploma from chain code",
        "operationId": "syncDiploma",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/upload": {
      "post": {
        "tags": [
          "upload"
        ],
        "summary": "Upload image",
        "description": "Upload image",
        "operationId": "upload",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "image"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Upload"
                }
              }
            }
          },
          "400": {
            "description": "Only .png, .jpg and .jpeg format allowed! | Image is required"
          },
          "413": {
            "description": "File too large"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginAdmin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "thanh"
          },
          "password": {
            "type": "string",
            "example": "thanh"
          }
        }
      },
      "LoginAdminSuccess": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "example": "ey..."
          },
          "username": {
            "type": "string",
            "example": "thanh"
          }
        }
      },
      "RegisterAdmin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "thanh"
          },
          "password": {
            "type": "string",
            "example": "thanh"
          },
          "role": {
            "type": "string",
            "example": "admin"
          }
        }
      },
      "ProfileAdmin": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "username": {
            "type": "string",
            "example": "admin"
          },
          "role": {
            "type": "string",
            "example": "admin"
          }
        }
      },
      "UpdateAdmin": {
        "type": "object",
        "properties": {
          "password": {
            "type": "string",
            "example": "123abcXYZ"
          },
          "role": {
            "type": "string",
            "example": "admin"
          }
        }
      },
      "ArrayAdmins": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/ProfileAdmin"
        }
      },
      "Diploma": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "12345abc"
          },
          "fullName": {
            "type": "string",
            "example": "Vo Van Thanh"
          },
          "dateOfBirth": {
            "type": "string",
            "example": "01/11/2001"
          },
          "gender": {
            "type": "string",
            "example": "Nam"
          },
          "certificate": {
            "type": "string",
            "example": "Bằng tốt nghiệp Đại học"
          },
          "speciality": {
            "type": "string",
            "example": "Công nghệ thông tin"
          },
          "graduationYear": {
            "type": "string",
            "example": 2023
          },
          "school": {
            "type": "string",
            "example": "Đại học Bách Khoa"
          },
          "rank": {
            "type": "string",
            "example": "Giỏi"
          },
          "modeOfStudy": {
            "type": "string",
            "example": "Chính quy"
          },
          "regNo": {
            "type": "string",
            "example": "k53-861"
          },
          "urlImage": {
            "type": "string",
            "example": ""
          },
          "status": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "UpdateDiploma": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "Vo Van Thanh"
          },
          "dateOfBirth": {
            "type": "string",
            "example": "01/11/2001"
          },
          "gender": {
            "type": "string",
            "example": "Nam"
          },
          "certificate": {
            "type": "string",
            "example": "Bằng tốt nghiệp Đại học"
          },
          "speciality": {
            "type": "string",
            "example": "Công nghệ thông tin"
          },
          "graduationYear": {
            "type": "string",
            "example": 2023
          },
          "school": {
            "type": "string",
            "example": "Đại học Bách Khoa"
          },
          "rank": {
            "type": "string",
            "example": "Giỏi"
          },
          "modeOfStudy": {
            "type": "string",
            "example": "Chính quy"
          },
          "regNo": {
            "type": "string",
            "example": "k53-861"
          },
          "urlImage": {
            "type": "string",
            "example": ""
          },
          "status": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "ArrayDiploma": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Diploma"
        }
      },
      "Upload": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "example": "https://s3.jthanh8144.com/abc.png"
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
